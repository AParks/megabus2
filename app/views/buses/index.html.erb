<div class="navbar">
  <div class="navbar-inner">
    <ul class="nav pull-right">
      <li><a href="/">Plan a new trip</a></li>
      <li><a href=<%= trips_path %>>Trips</a></li>
      <li class="dropdown active">
        <a id="drop1" href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">View Network<b class="caret"></b></a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="drop1">
          <li class="active"><a tabindex="-1" href=<%= buses_path %>>Buses</a></li>
          <li><a tabindex="-1" href=<%= cities_path %>>Cities</a></li>
        </ul>
      </li>
    </ul>
  </div>
</div>

<div class="ACPContainer">

<table class="table table-striped tablesorter-default sortable">
  <thead>  
    <tr>
      <th title="Press shift for multi-column sorting">Price</th>
      <th title="Press shift for multi-column sorting">Leave time</th>
      <th title="Press shift for multi-column sorting">Arrival time</th>
      <th title="Press shift for multi-column sorting">Leaving From</th>
      <th title="Press shift for multi-column sorting">Arriving At</th>
    </tr>
  </thead>  

  <tbody>  
  <% @buses.each do |bus| %>
    <tr>
      <td><%= bus.price %></td>
      <td><%= bus.leave_time.strftime("%a %b %e %Y %H:%M %p %Z ") %></td>
      <td><%= bus.arrival_time.strftime("%a %b %e %Y %H:%M %p %Z ") %></td>
    	<td><%= bus.leaving_from.name %></td>
      <td><%= bus.traveling_to.name%></td>
    </tr>
  <% end %>
  </tbody>  

</table>

<br />

</div>
