<script id="my_vars_json" type="text/json">
    <% @trip["megabusID_orig"] = @trip.leaving_from.megabusID%>
    <% @trip["megabusID_dest"] = @trip.traveling_to.megabusID%>
    <%= j @trip.to_json(:except => [ :id, :updated_at, :created_at ]).html_safe %>




</script>

<div class="navbar">
  <div class="navbar-inner">
    <ul class="nav pull-right">
      <li ><a href="/">Plan a new trip</a></li>
      <li class="active"><a href=<%= trips_path %>>Trips</a></li>
      <li class="dropdown">
        <a id="drop1" href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">View Network<b class="caret"></b></a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="drop1">
          <li><a tabindex="-1" href=<%= buses_path %>>Buses</a></li>
          <li><a tabindex="-1" href=<%= cities_path %>>Cities</a></li>
        </ul>
      </li>
    </ul>
  </div>
</div>

  <div class="row-fluid">
    <div class="span2">
      <p>
          <label for="amount">Price range:</label>
          <input type="text" id="amount" style="border: 0; color: #f6931f; font-weight: bold;" />
      </p>
      <div id="slider-range"></div>
    </div>
    <div class="span10">

      <% if @routes.empty? %>
      <% puts @trip.leaving_from %>
        <p> 
          Sorry, there are no routes from 
          <%= @trip.leaving_from.name %> to <%= @trip.traveling_to.name %>.
        <p>
      <% else %>

      You searched for trips leaving <b><%= @trip.leaving_from.name %></b> on <b><%= @trip.outbound_date %></b> to <b><%= @trip.traveling_to.name %></b> for <b><%= @trip.number_of_passengers %> passenger</b>, returning on <b><%= @trip.return_date %></b>.


        <table class="sortable" border="3" cellpadding="10" cellspacing="10" align='center'>
          <thead>  
            <tr>
              <th title="Press shift for multi-column sorting">Total Price</th>
              <th> # transfers</th>
              <th> Duration </th>
              <th> Total Layover </th>
              <th> Max layover </th>
              <th>Itinerary</th>

            </tr>
          </thead>  
        <tbody>

          <% @routes.each do |route| %>
            <tr class="route" value=<%= route["price"]%> onclick="window.open(&quot;http://www.tourism.gov.my/&quot;); 
 window.open(&quot;http://www.tic.kelantan.gov.my/&quot;);">
              <td> <%= route["price"] %> </td>
              <td><%= route["info"].length - 1 %> </td>
              <% 
              duration_secs = route["info"].last["arrival_time"].to_f - route["info"].first["departure_time"].to_f
              hours = 0
              if ( duration_secs >= 3600.0) then
                hours = duration_secs/(3600.0)
              end  
              remaining_secs = duration_secs % 3600.0
              min = remaining_secs/60
              %>
              <td> <%= hours%>h <%= min%> m</td>
              <td><%= route["info"].length - 1 %> </td>
              <td><%= route["info"].length - 1 %> </td>
              <td>
              <table class="table">  
                <thead>  
                  <tr >
                    <th>Price</th>
                    <th>Leave time</th>
                    <th>Arrival time</th>
                    <th>Leaving From</th>
                    <th>Arriving At</th>
                  </tr>
                </thead>  
                  
                  <tbody>
                    <% (route["info"]).each do |bus_leg| %>
                      <tr>         
                        <td><%= bus_leg["price"] %></td>
                        <td><%= bus_leg["leave_time"].in_time_zone('Eastern Time (US & Canada)') %></td>
                        <td><%= bus_leg["arrival_time"].in_time_zone('Eastern Time (US & Canada)') %></td>
                        <td><%= bus_leg["leaving_from_name"] %></td>
                        <td><%= bus_leg["traveling_to_name"] %></td>
                      </tr>
                    <% end %>
                      
                  </tbody>  
              </table>
            </td>
          </tr>
          <% end %>
        </tbody>
        </table>
      <% end %>
    </div>  
  </div>
