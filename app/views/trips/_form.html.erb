<%= form_for(@trip, html: { class: 'form-horizontal' } ) do |f| %>
<% if @trip.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

	<ul>
		<% @trip.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="control-group">
	<div class="field">
		<%= f.label :number_of_passengers,
		class: 'control-label'	%>
		<br />
		<div class="controls">
			<%= f.number_field :number_of_passengers, :min => 1 , :value => 1 %>
		</div>
	</div>

	<div class="control-group">
		<div class="field">
			<%= f.label :leaving_from_id, class: 'control-label' %>
			<br />
			<div class="controls">
				<%= f.collection_select :leaving_from_id, @cities, :id, :name %>
			</div>
		</div>

		<div class="control-group">
			<div class="field">
				<%= f.label :traveling_to_id, class: 'control-label' %>
				<br />
				<div class="controls">
					<%= f.collection_select :traveling_to_id, @cities, :id, :name %>
				</div>

				<div class="control-group">
					<div class="field">
						<%= f.label :outbound_date, class: 'control-label' %>
						<br />
						<div class="controls">
							<%= f.date_select :outbound_date, :start_year =>Time.now.year %>
						</div>
					</div>

					<div class="control-group">
					<div class="field">
						<%= f.label :return_date, class: 'control-label' %>
						<br />
						<div class="controls">
							<%= f.text_field :return_date, :id =>"trip_return_date" %>
						</div>
					</div>

			

						<div class="form-actions">
							<%= f.submit %>
						</div>
						<% end %>

