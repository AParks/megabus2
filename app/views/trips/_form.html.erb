
<%= form_for(@trip, html: { class: 'form-horizontal'}) do |f| %>
  <% if @trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
      <% @trip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="control-group">  
  <div class="field">
    <%= f.label :number_of_passengers, 
				class: 'control-label'	%> <br />
	 <div class="controls">
    <%= f.number_field :number_of_passengers %>
  </div>
</div>
  
<div class="control-group">    
  <div class="field">
    <%= f.label :leaving_from, class: 'control-label' %><br />
	 <div class="controls">
	 	 <%= f.collection_select :leaving_from, @cities, :id, :name %>
  </div>
</div> 
 
<div class="control-group">  
  <div class="field">
    <%= f.label :traveling_to, class: 'control-label' %><br />
	<div class="controls">
	 <%= f.collection_select :traveling_to, @cities, :id, :name %>
  </div>
  
<div class="control-group">    
  <div class="field">
    <%= f.label :outbound_date, class: 'control-label' %><br />
	<div class="controls">
     <%= f.date_select :outbound_date %>
  </div>
</div>  
  
<div class="control-group">    
  <div class="field">
    <%= f.label :return_date, class: 'control-label' %><br />
	 <div class="controls">
    <%= f.date_select :return_date %>
  </div>
</div>
  
  <div class="form-actions">
    <%= f.submit %>
  </div>
<% end %>

